@model SBiSaccoWeb.Entities.Group

@{
    ViewBag.Title = "Solidarity Group Details";
}

<h2 class="page-title">Solidarity Group Details</h2>

@using (Html.BeginForm("UploadEmployerLogo", "DataEntry", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-upload-logo" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Group</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.establishment_date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.establishment_date)
            @Html.ValidationMessageFor(model => model.establishment_date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.meeting_day)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.meeting_day)
            @Html.ValidationMessageFor(model => model.meeting_day)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.loan_officer_id)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.loan_officer_id)
            @Html.ValidationMessageFor(model => model.loan_officer_id)
        </div>

        
    </fieldset>
}












@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });
    </script>

}










