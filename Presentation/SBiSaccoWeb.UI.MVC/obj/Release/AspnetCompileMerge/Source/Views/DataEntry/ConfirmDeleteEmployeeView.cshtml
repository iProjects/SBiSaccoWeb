@model SBiSaccoWeb.UI.MVC.Models.ConfirmDeleteModel

@{
    ViewBag.Title = "Confirm Delete";
    var Employee = Model.Description.ToUpper(); 
}

<h2 class="page-title">Confirm Delete Employee - @Employee </h2>

@using (Html.BeginForm("DeleteEmployee", "DataEntry", FormMethod.Post, new { enctype = "multipart/form-data", id = "delete-employee-form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Confirm Delete</legend>

        @Html.HiddenFor(model => model.Id)

        <p>
            <input type="submit" value="Delete" id="btnSubmit"  />
        </p>
    </fieldset>
}









@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {

            $("#loading").hide();

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });


        $("#btnSubmit").on("click", function (e) {

            $("#progress").removeClass('displaynone');
            $("#progress").addClass('displayblock');
            $("#progress").show();

            $("#delete-employee-form").submit();
        });

        </script>
 
}









