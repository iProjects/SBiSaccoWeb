@model SBiSaccoWeb.Entities.Village

@{
    ViewBag.Title = "Create Non Solidarity Group";
}

<h2 class="page-title">Create Non Solidarity Group</h2>

@using (Html.BeginForm("UploadEmployerLogo", "DataEntry", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-upload-logo" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Village</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.establishment_date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.establishment_date)
            @Html.ValidationMessageFor(model => model.establishment_date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.loan_officer)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.loan_officer)
            @Html.ValidationMessageFor(model => model.loan_officer)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.meeting_day)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.meeting_day)
            @Html.ValidationMessageFor(model => model.meeting_day)
        </div>

        <p>
            <input type="submit" value="Create"  id="btnSubmit" />
        </p>
    </fieldset>
}












@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });
    </script>

}










